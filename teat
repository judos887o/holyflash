-- üîÅ Dauerhaft loopende Animation, auch nach Tod & Respawn (FE-sicher)
local player = game.Players.LocalPlayer

-- Funktion zum Starten der Animation
local function playLoopedAnimation(character)
	-- Warte sicherheitshalber, bis alle Teile geladen sind
	local humanoid = character:WaitForChild("Humanoid")
	local hrp = character:WaitForChild("HumanoidRootPart")

	-- Erstelle & spiele die Animation
	local anim = Instance.new("Animation")
	anim.AnimationId = "rbxassetid://77840765435893"

	local track = humanoid:LoadAnimation(anim)
	track.Looped = true
	track.Priority = Enum.AnimationPriority.Action
	track:Play()

	print("[Animation] Animation l√§uft f√ºr:", player.Name)

	-- Wenn der Spieler stirbt ‚Üí nach Respawn erneut starten
	humanoid.Died:Connect(function()
		print("[Animation] Spieler gestorben, warte auf Respawn...")
	end)
end

-- Starte beim aktuellen Charakter
if player.Character then
	task.spawn(function()
		playLoopedAnimation(player.Character)
	end)
end

-- Wenn Charakter respawnt ‚Üí warte, bis alles geladen ist, und starte erneut
player.CharacterAdded:Connect(function(newChar)
	task.defer(function()
		newChar:WaitForChild("Humanoid")
		newChar:WaitForChild("HumanoidRootPart")
		task.wait(0.5) -- kleine Verz√∂gerung, um Roblox Zeit zum Laden zu geben
		playLoopedAnimation(newChar)
	end)
end)
